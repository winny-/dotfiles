# -*- mode: ssh-config; -*-
# Set the correct username for various git hosts.
# Use separate ssh key for hosts.
Host gh github.com
  User git
  IdentityFile %d/.ssh/keys/developer
  IdentitiesOnly yes
Host gitlab.com
  User git
  IdentityFile %d/.ssh/keys/developer
  IdentitiesOnly yes  
Host bb bitbucket.com
  IdentityFile %d/.ssh/key/developer
  IdentitiesOnly yes
Host aur aur.archlinux.org
  User aur
  IdentityFile %d/.ssh/keys/developer
  IdentitiesOnly yes
Host heroku.com
  IdentityFile %d/.ssh/keys/developer
  IdentitiesOnly yes
  